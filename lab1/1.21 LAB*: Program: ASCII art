#include <iostream>
using namespace std;

int main() {
   // Draw tree
   cout << "   *"    << endl;
   cout << "  ***"   << endl;
   cout << " *****"  << endl;
   cout << "*******" << endl;
   cout << "  ***"   << endl;

   cout << endl << endl; // Two blank lines

   // Draw cat
   cout << "/\\   /\\" << endl;
   cout << "  o o"    << endl;
   cout << " =   ="   << endl;
   cout << "  ---"    << endl;

   return 0;
}
